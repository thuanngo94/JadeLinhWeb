@using OnlineShop.Models
@using OnlineShop.Common 
@model OnlineShop.Models.Contact
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
} 

       <div class="container-fluid">
            <div class="row">
                <div class="col-md-2">
                    
                </div>
                <div class="col-md-8">
                    <div class="col-md-8">
                        @using (Html.BeginForm("Contact", "Contact", FormMethod.Post))
                        {
                            @Html.AntiForgeryToken()
                            <br />
                            <br />
                            <br />
                            <h2>Contact Us</h2>
                            <div class="form-horizontal">
                                <hr />
                                <div class="form-group">
                                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                    @if (Model != null)
                                    {
                                        <div class="alert alert-success ">@ViewBag.Success</div>
                                    }
                                  
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(model => model.YourName, htmlAttributes: new { @class = "control-label col-md-2" })
                                    <div class="col-md-10">
                                        @Html.TextAreaFor(model => model.YourName, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.YourName, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                             
                                <div class="form-group">
                                    @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label col-md-2" })
                                    <div class="col-md-10">
                                        @Html.TextAreaFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(model => model.Subject, htmlAttributes: new { @class = "control-label col-md-2" })
                                    <div class="col-md-10">
                                        @Html.TextAreaFor(model => model.Subject, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.Subject, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(model => model.Message, htmlAttributes: new { @class = "control-label col-md-2" })
                                    <div class="col-md-10">
                                        @Html.TextAreaFor(model => model.Message, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.Message, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            
                                <div class="form-group">
                                    <div class="col-md-offset-2 col-md-10">
                                        <input type="submit" value="Send request" class="add-to-cart" style="width:120px" />
                                    </div>
                                </div>
                            </div>
                        }
                    </div>                    
                </div>
                <div class="col-md-2">

                </div>
            </div>
        </div>  
