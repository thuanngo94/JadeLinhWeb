<script src="/assets/client/js/modernizr-2.6.2-respond-1.1.0.min.js"></script>
<!-- Default-JavaScript -->

<!--New Products  Slide-->

    <div class="container-fluid" style="padding-top:50px;">
        <h3 style="color:brown; font-size:xx-large; " data-wow-delay=".5s">New Products</h3>
        <div class="row" data-wow-delay=".5s">
            <div class="col-md-12">
                @foreach (var pro in Model)
                {
                    //if (pro.Discount == 5)
                    //{
                    <div class="col-xs-12 col-sm-6 col-md-3 team_columns_item_image cloneditem-1">
                        <a href="@Url.Action("Detail", "Detail", new { id = @pro.ProductID })" class="product-image">
                            <img src="/assets/client/images/sp/@pro.ProductID/main.jpg" alt="slider 01" class="img-responsive" id="img_prod">
                        </a>
                        <div class="team_columns_item_caption">
                            <h4>@pro.Name</h4>
                            <hr>
                        </div>
                    </div>
                   @*}*@
                }

                <div class="clearfix"> </div>
            </div>
            <div class="controls pull-right hidden-xs" style="text-align:center">
                <!--Phân Trang-->
                <div>
                    <a href="@Url.Action("Index", "Home" ,
                       new {  page=ViewBag.CurPage -1 })"
                       @if (ViewBag.CurPage == 1) { <text> onclick="return false" style="cursor:not-allowed" </text>                                       } aria-label="Previous"
                       class="btn btn-black btn-sm">
                        <span aria-hidden="true">&laquo;</span>
                    </a>
                    @for (int i = 1; i <= ViewBag.PageCount; i++)
                    {
                        <a href="@Url.Action("Index", "Home",
                       new {  page=i })"
                           @if (ViewBag.CurPage == i) { <text> onclick="return false" </text>                        <text> class="btn btn-info btn-sm " </text>                       } else { <text> class="btn btn-black btn-sm" </text>                      }>
                            @i
                        </a>
                    }
                    <a href="@Url.Action("Index", "Home",
                       new {  page=ViewBag.CurPage +1 })"
                       @if (ViewBag.CurPage == ViewBag.PageCount) { <text> onclick="return false" style="cursor:not-allowed" </text>                                        } aria-label=" next"
                       class="btn btn-black btn-sm">
                        <span aria-hidden="true">&raquo;</span>
                    </a>
                </div>
                <!-- End Phân Trang-->
            </div>
        </div>
        <!--New Products  Slide-->
        <hr />
        <!--Top Sold Products-->
        <h3 style="color:brown; font-size:40px;" data-wow-delay=".5s" class="animated wow slideInRight">Top Sold Products</h3>
        <div class="products">
            <div class="container-fluid">
                <!--Left Sidebar-->
                <div class="col-md-4 products-left">
                    <!--Sale Products-->
                    <div class="new-products animated wow slideInRight" data-wow-delay=".5s">
                        <h3>Sale Products</h3>
                        <div class="new-products-grids">
                            @foreach (var item in Model)
                            {
                                <div class="new-products-grid">
                                    @if (item.Discount >= 5)
                                    {
                                        <div class="new-products-grid-left">
                                            <a href="@Url.Action("Detail","Detail",new {@id = item.ProductID})">
                                                <img src="/assets/client/images/sp/@item.ProductID/main.jpg" alt=" " class="img-responsive" />
                                            </a>
                                        </div>
                                        <div class="new-products-grid-right">
                                            <h4><a href="@Url.Action("Detail","Detail",new {@id = item.ProductID})">@item.Name</a></h4>
                                            <div class="rating">
                                                <div class="rating-left">
                                                    <img src="/assets/client/images/2.png" alt=" " class="img-responsive">
                                                </div>
                                                <div class="rating-left">
                                                    <img src="/assets/client/images/2.png" alt=" " class="img-responsive">
                                                </div>
                                                <div class="rating-left">
                                                    <img src="/assets/client/images/2.png" alt=" " class="img-responsive">
                                                </div>
                                                <div class="rating-left">
                                                    <img src="/assets/client/images/1.png" alt=" " class="img-responsive">
                                                </div>
                                                <div class="rating-left">
                                                    <img src="/assets/client/images/1.png" alt=" " class="img-responsive">
                                                </div>
                                                <div class="clearfix"> </div>
                                            </div>                                          
                                            <div class="simpleCart_shelfItem new-products-grid-right-add-cart">
                                                <p>
                                                    <span class="item_price">$@item.UnitPrice</span>
                                                    @using (Html.BeginForm("AddToCart", "ShoppingCart", new { @productID = item.ProductID, @strUrl = Request.Url.ToString() }))
                                                    {
                                                        <input type="submit" style="cursor:pointer;width:100px" value="Add To Cart" id="btnCart" class="add-to-cart" />
                                                    }
                                                </p>
                                            </div>
                                        </div>
                                    }
                                    <div class="clearfix"> </div>
                                </div>
                            }
                        </div>
                    </div>
                    <!--End Sale Products-->
                    <!--Quảng Cáo-->
                    <div class="men-position animated wow slideInUp" data-wow-delay=".5s">
                        <a href="#">
                            <img src="~/assets/client/images/Women/AoDai/Cachtan/cachtan1.jpg" />
                        </a>
                        <div class="men-position-pos">
                            <h4 style="color:black;">Cach Tan Style Collection</h4>
                            <h5><span>55%</span> Flat Discount</h5>
                        </div>
                    </div>
                    <!-- End Quảng Cáo-->
                </div>
                <!--End Left Sidebar-->
                <div class="col-md-8 products-right">
                    <!--Quảng Cáo-->
                    <div class="products-right-grid">
                        <div class="products-right-grids-position animated wow slideInRight" data-wow-delay=".5s">
                            <img src="/assets/client/images/Women/AoDai/banner.jpg" alt=" " class="img-responsive" />
                            <div class="products-right-grids-position1">
                                <h4>2017 New Collection</h4>
                                <p>
                                    For those who wear little ao dai, choose neutral fabrics such as light green, light yellow, orange earth, strawberry cream, black gray ...
                                </p>
                            </div>
                        </div>
                    </div>
                    <!--Quảng Cáo-->
                    <!--Top Sold Products-->
                    <div class="products-right-grids-bottom">
                        @foreach (var pro in Model)
                        {
                            <div class="col-md-4 products-right-grids-bottom-grid">
                                <div class="new-collections-grid1 products-right-grid1 animated wow slideInUp" data-wow-delay=".5s">
                                    @if (pro.UnitInStock <= 0)
                                    {
                                        <div class="new-collections-grid1-image">
                                            <a href="#" class="product-image"><img src="/assets/client/images/sp/@pro.ProductID/main.jpg" alt="" class="img-responsive"></a>
                                            <div class="new-collections-grid1-image-pos products-right-grids-pos">
                                                <a href="@Url.Action("Detail", "Detail", new { id = @pro.ProductID })">View Detail</a>
                                            </div>
                                            <div class="new-collections-grid1-right products-right-grids-pos-right">
                                                <div class="rating">
                                                    <div class="rating-left">
                                                        <img src="/assets/client/images/2.png" alt=" " class="img-responsive">
                                                    </div>
                                                    <div class="rating-left">
                                                        <img src="/assets/client/images/2.png" alt=" " class="img-responsive">
                                                    </div>
                                                    <div class="rating-left">
                                                        <img src="/assets/client/images/2.png" alt=" " class="img-responsive">
                                                    </div>
                                                    <div class="rating-left">
                                                        <img src="/assets/client/images/1.png" alt=" " class="img-responsive">
                                                    </div>
                                                    <div class="rating-left">
                                                        <img src="/assets/client/images/1.png" alt=" " class="img-responsive">
                                                    </div>
                                                    <div class="clearfix"> </div>
                                                </div>
                                            </div>
                                        </div>
                                        <h4><a href="@Url.Action("Detail", "Detail", new { id = @pro.ProductID })">@pro.Name</a></h4>
                                        @*<p>@pro.ShortDescription</p>*@
                                        <div class="simpleCart_shelfItem products-right-grid1-add-cart">
                                            <p>
                                                @if (pro.OldPrice != 0)
                                                {
                                                    <i>$@pro.OldPrice</i>
                                                }
                                                <span class="item_price">$@pro.UnitPrice</span>

                                                @using (Html.BeginForm("AddToCart", "ShoppingCart", new { @productID = pro.ProductID, @strUrl = Request.Url.ToString() }))
                                                {
                                                    <input type="submit" style="cursor:pointer;max-width:100%;width:auto;" value="Add To Cart" id="btnCart" class="add-to-cart" />
                                                }

                                            </p>
                                        </div>
                                    }

                                </div>
                            </div>
                        }
                        <div class="clearfix"> </div>
                    </div>
                    <!--Top Sold Products--End-->
                    <!--Phân Trang-->
                    <div>

                        <a href="@Url.Action("Index", "Home" ,
                       new {  page=ViewBag.CurPage -1 })"
                           @if (ViewBag.CurPage == 1) { <text> onclick="return false" style="cursor:not-allowed" </text>                                   } aria-label="Previous"
                           class="btn btn-black btn-sm">
                            <span aria-hidden="true">&laquo;</span>
                        </a>

                        @for (int i = 1; i <= ViewBag.PageCount; i++)
                        {

                            <a href="@Url.Action("Index", "Home",
                       new {  page=i })"
                               @if (ViewBag.CurPage == i) { <text> onclick="return false" </text>                    <text> class="btn btn-info btn-sm " </text>                   } else { <text> class="btn btn-black btn-sm" </text>                  }>
                                @i
                            </a>


                        }



                        <a href="@Url.Action("Index", "Home",
                       new {  page=ViewBag.CurPage +1 })"
                           @if (ViewBag.CurPage == ViewBag.PageCount) { <text> onclick="return false" style="cursor:not-allowed" </text>                                    } aria-label=" next"
                           class="btn btn-black btn-sm">
                            <span aria-hidden="true">&raquo;</span>
                        </a>
                    </div>
                    <!-- End Phân Trang-->
                </div>
                <div class="clearfix"> </div>
            </div>
        </div>
    </div>

   